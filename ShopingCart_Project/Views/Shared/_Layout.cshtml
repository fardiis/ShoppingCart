<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/lobibox-master/css/lobibox.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/lobibox-master/js/lobibox.js"></script>

  
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">فروشگاه </a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav pull-right">
                    <li> <a role="button" asp-action="CheckExistShoppingCart" asp-controller="ShoppingCart" class="btn btn-info fontYekan" style="color:white">مشاهده سبد خرید</a></li>
                    @await Component.InvokeAsync("CategoryMenu")
                    <li><a asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li>   @await Component.InvokeAsync("ShoppingCartSummary")</li>
                    @await Html.PartialAsync("LoginPartial")
                </ul>
            </div>
        </div>
    </nav>    
    <div>
        @RenderBody()
    </div>
</body>
</html>
