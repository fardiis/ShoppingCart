@using Microsoft.AspNetCore.Identity.EntityFrameworkCore;
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> signInManager;

@if (signInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-left">
        <ul class="pull-left">
            <li><a href="javascript:document.getElementById('logoutForm').submit()">خروج</a></li>
        </ul>
    </form>
}
else
{
    <ul class="fontYekan pull-left">
        <li><a asp-action="Register" asp-controller="Account">ثبت نام</a></li>
        <li><a asp-action="Login" asp-controller="Account">ورود کاربران</a></li>
    </ul>
}